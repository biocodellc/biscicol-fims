<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <context:component-scan base-package="biocode.fims.*" />

    <bean id="propsFileResource" class="org.springframework.core.io.ClassPathResource">
        <constructor-arg value="/biscicol-fims.props" />
    </bean>

    <bean id="settingsManagerInstance"  class="biocode.fims.settings.SettingsManager" factory-method="getInstance">
        <constructor-arg ref="propsFileResource">
        </constructor-arg>
    </bean>

</beans>